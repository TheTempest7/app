div(class="col col-md-6 card-father")
    div(class="card card-row")
        a(href='goods?id='+val['id'])
            h3(class="card-title") #{val['name']}
            img(class='card_image' src='images/'+val['image'], alt="device")
            p #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g,'$&')} CAD
            p #{val['description']}
        ul(class="card-actions")
            li
                button(class="button-primary button add-to-cart" data-goods_id=val['id']) add to Cart